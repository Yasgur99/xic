#!/bin/bash

# Dependencies
mvn install:install-file \
   -Dfile=./lib/jflex-1.8.2/lib/jflex-full-1.8.2.jar \
   -DgroupId=de.jflex \
   -DartifactId=jflex-maven-plugin \
   -Dversion=1.8.2 \
   -Dpackaging=jar \
   -DgeneratePom=true
 mvn install:install-file \
    -Dfile=./lib/args4j-2.33.jar \
    -DgroupId=args4j \
    -DartifactId=args4j\
    -Dversion=2.33 \
    -Dpackaging=jar \
    -DgeneratePom=true
# Create jar
mvn package

# TODO run jflex

## Create executable
#echo "java -cp ./target/xic-0.0.1-SNAPSHOT.jar mtm68.Main\$@" > xic
echo "java -cp target/xic-0.0.1-SNAPSHOT.jar mtm68.Main" > xic
chmod +x xic
